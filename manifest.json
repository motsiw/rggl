{

  "manifest_version": 2,
  "name": "Remove German Gender Language",
  "version": "2.3",
  "description": "Entfernt deutsche Gender-Sprache weitgehend aus Webseiten.",
  
  "icons": {
    "16": "button/gendericon_red.png"
  },
     "background": {
      "scripts": [ "background.js" ]
   },
     "browser_action": {
      "default_icon": {
         "16": "button/gendericon_black.png"
      },
	  "browser_style": true,
	  "default_title": "Filterung aktiv"
   },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["removegenderlang.js"],
	  "run_at": "document_end"
    }
  ],
  
    "permissions": [
    "activeTab",
    "tabs",
	"storage"
  ]

}